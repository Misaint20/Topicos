<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.MainPage">

    <StackLayout Padding="20">
        <Label Text="Agenda Personal" 
               HorizontalOptions="Center" 
               VerticalOptions="Start" 
               FontSize="24" 
               FontAttributes="Bold" 
               Margin="10,10,10,30"/>

        <Button Text="Lista de Contactos" Clicked="IrListaContactos" Margin="3"/>
        <Button Text="Crear Nuevo Contacto" Clicked="IrCrearContacto" Margin="3"/>
        <Button Text="Configuración" Clicked="IrConfiguracion" Margin="3"/>
    </StackLayout>

</ContentPage>